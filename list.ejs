<html>

    <head>
        
        <title>Bambu_Board</title>
        <meta charset="utf-8">
		
    </head>
    <body>
        
        <table width="100%" border="1">
            
            <tr>
            
                <th>boardID</th>
                <th>appID</th>
                <th>boardname</th>
                <th>nickname</th>
                <th>content</th>
                <th>timestamp</th>
                <th>like</th>
                <th>warn</th>
                
                <th>Update</th>
                <th>Delete</th>
            
            </tr>

            <% if (query != undefined) { %>
            
                <% query.forEach(function(item, index) { %>

                <tr>

                    <td><%= item.boardid %></td>
                    <td><%= item.appid %></td>
                    <td><%= item.boardname %></td>
                    <td><%= item.nickname %></td>
                    <td><%= item.content %></td>
                    <td><%= item.timestamp %></td>
                    <td><%= item.like %></td>
                    <td><%= item.warn %></td>
                    <td><a href="/update/<%= item.id %>">Update</a></td>
                    <td><a href="/delete/<%= item.id %>">Delete</a></td>

                </tr>

                <% }); %>

            <% } %>
            
        </table>
        
    </body>

</html>